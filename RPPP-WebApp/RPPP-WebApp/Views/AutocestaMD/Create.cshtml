@model Autocesta

@{
    ViewBag.Title = "Nova autocesta";
}

<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Oznaka"></label>
        <div><span asp-validation-for="Oznaka" class="text-danger"></span></div>
        <input asp-for="Oznaka" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Naziv"></label>
        <div><span asp-validation-for="Naziv" class="text-danger"></span></div>
        <input asp-for="Naziv" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Koncesionar"></label>
        <div><span asp-validation-for="KoncesionarId" class="text-danger"></span></div>
        <select class="form-control" asp-for="KoncesionarId" asp-items="ViewBag.Autoceste">
            <option disabled selected value="">Odaberite koncesionara</option>
        </select>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-default">Odustani</a>
    </div>
</form>

@section scripts {
    <partial name="IncludeValidation" />
}
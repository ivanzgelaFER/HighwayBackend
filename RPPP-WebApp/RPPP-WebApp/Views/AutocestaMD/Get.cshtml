@model AutocestaViewModel

<tr hx-target="this" hx-swap="outerHTML">
    <td class="text-left">@Model.Oznaka</td>
    <td class="text-left">@Model.Naziv</td>
    <td class="text-left">@Model.Koncesionar</td>
    <td>
        <a class="btn btn-sm edit"
           hx-get="@Url.Action(nameof(AutocestaMDController.Edit), new { id = Model.Id })"
           title="Ažuriraj"><i class="fas fa-edit"></i></a>
    </td>
    <td>
        <button class="btn btn-sm btn-danger"
                hx-confirm="Obrisati autocestu?"
                hx-delete="@Url.Action(nameof(AutocestaMDController.Delete), new { id = Model.Id })"
                title="Obriši">
            <i class="fas fa-trash-alt"></i>
        </button>
    </td>
</tr>
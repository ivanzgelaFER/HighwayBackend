@model Incident


<tr hx-target="this" hx-swap="outerHTML">
    <td class="text-start">
        <input asp-for="Opis" class="form-control" />
    </td>
    <td class="text-start">
        <input asp-for="Datum" class="form-control" />
    </td>
    <td class="text-start">
        <input asp-for="MeteoroloskiUvjeti" class="form-control" />
    </td>
    <td class="text-start">
        <input asp-for="StanjeNaCesti" class="form-control" />
    </td>
    <td class="text-start">
        <input asp-for="Prohodnost" class="form-control" />
    </td>
    <td class="text-start">
        <select class="form-select" asp-for="DionicaId" asp-items="ViewBag.Incidenti2">
        </select>
    </td>
    <td class="text-start">
        <select class="form-select" asp-for="VrstaIncidentaId" asp-items="ViewBag.Incidenti1">
        </select>
    </td>
    <td>
        <input type="hidden" asp-for="Id" />
        <button hx-include="closest tr"
                hx-post="@Url.Action(nameof(IncidentController.Edit))"
                class="btn btn-sm btn-primary" title="Spremi">
            <i class="fas fa-save"></i>
        </button>
    </td>
    <td>
        <button class="btn btn-sm cancel"
                hx-get="@Url.Action(nameof(IncidentController.Get), new { id = Model.Id })"
                title="Odustani">
            <i class="fas fa-undo-alt"></i>
        </button>
    </td>
    <td>
        <div asp-validation-summary="All"></div>
    </td>
</tr>
@model Koncesionar

@{
    ViewBag.Title = "Ažuriranje koncesionara";
}

<form asp-route-id="@Model.Id"
      asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      method="post">
    <div asp-validation-summary="All"></div>
    @*Ne koristi se, jer se ne rekonstruira cijela država, već se samo koristi id koji je već u parametrima route*@
    @*<input type="hidden" asp-for="OznDrzave" />*@
    <div class="form-group">
        <label asp-for="Naziv"></label>
        <div><span asp-validation-for="Naziv" class="text-danger"></span></div>
        <input asp-for="Naziv" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Adresa"></label>
        <div><span asp-validation-for="Adresa" class="text-danger"></span></div>
        <input asp-for="Adresa" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <div><span asp-validation-for="Email" class="text-danger"></span></div>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="KoncesijaOd"></label>
        <div><span asp-validation-for="KoncesijaOd" class="text-danger"></span></div>
        <input asp-for="KoncesijaOd" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="KoncesijaDo"></label>
        <div><span asp-validation-for="KoncesijaDo" class="text-danger"></span></div>
        <input asp-for="KoncesijaDo" class="form-control" />
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">Odustani</a>
    </div>
</form>

@section scripts {
    <partial name="IncludeValidation" />
}
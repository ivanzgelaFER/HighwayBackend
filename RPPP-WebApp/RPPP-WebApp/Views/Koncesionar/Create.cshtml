@model Koncesionar

@{
    ViewBag.Title = "Novi koncesionar";
}

<h2>Unos novog koncesionara</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Naziv"></label>
        <div><span asp-validation-for="Naziv" class="text-danger"></span></div>
        <input asp-for="Naziv" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Adresa"></label>
        <div><span asp-validation-for="Adresa" class="text-danger"></span></div>
        <input asp-for="Adresa" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <div><span asp-validation-for="Email" class="text-danger"></span></div>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="KoncesijaOd">Koncesija od:</label>
        <div><span asp-validation-for="KoncesijaOd" class="text-danger"></span></div>
        <input asp-for="KoncesijaOd" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="KoncesijaDo">Koncesija do:</label>
        <div><span asp-validation-for="KoncesijaDo" class="text-danger"></span></div>
        <input asp-for="KoncesijaDo" class="form-control" />
    </div>
    
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-default">Odustani</a>
    </div>
</form>

@section scripts {
    <partial name="IncludeValidation" />
}
@model Reakcija


<tr hx-target="this" hx-swap="outerHTML">
    <td class="text-start">
        <input asp-for="Opis" class="form-control" />
    </td>
    <td class="text-start">
        <input asp-for="Datum" class="form-control" />
    </td>

    <td class="text-start">
        <select class="form-select" asp-for="IncidentId" asp-items="ViewBag.Incidenti">
        </select>
    </td>
    <td class="text-start">
        <select class="form-select" asp-for="VrstaReakcijeId" asp-items="ViewBag.VrsteReakcija">
        </select>
    </td>


    <td>
        <input type="hidden" asp-for="Id" />
        <button hx-include="closest tr"
                hx-post="@Url.Action(nameof(ReakcijaController.Edit))"
                class="btn btn-sm btn-primary" title="Spremi">
            <i class="fas fa-save"></i>
        </button>
    </td>
    <td>
        <button class="btn btn-sm cancel"
                hx-get="@Url.Action(nameof(ReakcijaController.Get), new { id = Model.Id })"
                title="Odustani">
            <i class="fas fa-undo-alt"></i>
        </button>
    </td>
    <td>
        <div asp-validation-summary="All"></div>
    </td>
</tr>
@model Reakcija

@{
    ViewBag.Title = "Nova reakcija";
}

<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Opis"></label>
        <div><span asp-validation-for="Opis" class="text-danger"></span></div>
        <input asp-for="Opis" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Datum"></label>
        <div><span asp-validation-for="Datum" class="text-danger"></span></div>
        <input asp-for="Datum" class="form-control" />
    </div>
    
    <div class="form-group">
        <label asp-for="Incident"></label>
        <div><span asp-validation-for="IncidentId" class="text-danger"></span></div>
        <select class="form-control" asp-for="IncidentId" asp-items="ViewBag.Incidenti">
            <option disabled selected value="">Odaberite incident</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="VrstaReakcije"></label>
        <div><span asp-validation-for="VrstaReakcijeId" class="text-danger"></span></div>
        <select class="form-control" asp-for="VrstaReakcijeId" asp-items="ViewBag.VrsteReakcija">
            <option disabled selected value="">Odaberite vrstu reakcije</option>
        </select>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-default">Odustani</a>
    </div>
</form>

@section scripts {
    <partial name="IncludeValidation" />
}
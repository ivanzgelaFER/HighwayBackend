@model Autocesta


<tr hx-target="this" hx-swap="outerHTML">
    <td class="text-start">
        <input asp-for="Oznaka" class="form-control" />
    </td>
    <td class="text-start">
        <input asp-for="Naziv" class="form-control" />
    </td>
    <td class="text-start">
        <select class="form-select" asp-for="KoncesionarId" asp-items="ViewBag.Autoceste">
        </select>
    </td>
    <td>
        <input type="hidden" asp-for="Id" />
        <button hx-include="closest tr"
                hx-post="@Url.Action(nameof(AutocestaController.Edit))"
                class="btn btn-sm btn-primary" title="Spremi">
            <i class="fas fa-save"></i>
        </button>
    </td>
    <td>
        <button class="btn btn-sm cancel"
                hx-get="@Url.Action(nameof(AutocestaController.Get), new { id = Model.Id })"
                title="Odustani">
            <i class="fas fa-undo-alt"></i>
        </button>
    </td>
    <td>
        <div asp-validation-summary="All"></div>
    </td>
</tr>
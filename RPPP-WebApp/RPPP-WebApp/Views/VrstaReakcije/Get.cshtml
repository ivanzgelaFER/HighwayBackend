@model VrstaReakcijeViewModel

<tr hx-target="this" hx-swap="outerHTML">
    <td class="text-left">@Model.Naziv</td>
    <td class="text-left">@Model.BrojTelefona</td>
    <td>
        <a class="btn btn-sm edit"
           hx-get="@Url.Action(nameof(VrstaReakcijeController.Edit), new { id = Model.Id })"
           title="Ažuriraj"><i class="fas fa-edit"></i></a>
    </td>
    <td>
        <button class="btn btn-sm btn-danger"
                hx-confirm="Obrisati vrstu reakcije?"
                hx-delete="@Url.Action(nameof(VrstaReakcijeController.Delete), new { id = Model.Id })"
                title="Obriši">
            <i class="fas fa-trash-alt"></i>
        </button>
    </td>
</tr>
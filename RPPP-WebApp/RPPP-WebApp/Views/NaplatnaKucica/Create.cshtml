@model NaplatnaKucica

@{
    ViewBag.Title = "Nova naplatna kucica";
}

<h2>Unos nove naplatne kucice</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label class="form-label">Otvorena</label>
        <select asp-for="Otvorena" class="dropdown">
            <option value="true">Da</option>
            <option value="false">Ne</option>
        </select>
        <div class="form-text"><span asp-validation-for="Otvorena" class="text-danger"></span></div>
    </div>

    <div class="form-group">
        <label class="form-label">Naplatna postaja</label>
        <select class="form-control" asp-for="NaplatnaPostajaId" asp-items="ViewBag.NaplatnaPostaja">
            <option disabled selected value="">Odaberite naplatnu postaju</option>
        </select>
        <div class="form-text"><span asp-validation-for="NaplatnaPostajaId" class="text-danger"></span></div>
    </div>

    <div class="form-group">
        <label class="form-label">Vrsta naplate</label>
        <select class="form-control" asp-for="VrstaNaplateId" asp-items="ViewBag.VrstaNaplate">
            <option disabled selected value="">Odaberite vrstu naplate</option>
        </select>
        <div class="form-text"><span asp-validation-for="VrstaNaplateId" class="text-danger"></span></div>
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-default">Odustani</a>
    </div>

</form>

@section scripts {
    <partial name="IncludeValidation" />
}
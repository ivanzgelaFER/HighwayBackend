@model RPPP_WebApp.Models.VrstaOdrzavanja

@{
    ViewBag.Title = "Nova vrsta održavanja";
}

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Naziv</label>
        <input asp-for="Naziv" class="form-control" />
        <div class="form-text"><span asp-validation-for="Naziv" class="text-danger"></span></div>
    </div>
    <div class="mb-3">
        <label class="form-label">Izvanredno</label>
        <select asp-for="Izvanredno" class="dropdown">
            <option value="">Ne znam</option>
            <option value="true">Da</option>
            <option value="false">Ne</option>
        </select>
        <div class="form-text"><span asp-validation-for="Izvanredno" class="text-danger"></span></div>
    </div>
    <div class="mb-3">
        <label class="form-label">Preventivno</label>
        <select asp-for="Preventivno" class="dropdown">
            <option value="">Ne znam</option>
            <option value="true">Da</option>
            <option value="false">Ne</option>
        </select>
        <div class="form-text"><span asp-validation-for="Preventivno" class="text-danger"></span></div>
    </div>
    <div class="mb-3">
        <label class="form-label">Periodičnost</label>
        <input asp-for="Periodicnost" class="form-control" />
        <div class="form-text"><span asp-validation-for="Periodicnost" class="text-danger"></span></div>
    </div>
    <div class="mb-3">
        <label class="form-label">Godišnje doba</label>
        <input asp-for="GodisnjeDoba" class="form-control" />
        <div class="form-text"><span asp-validation-for="GodisnjeDoba" class="text-danger"></span></div>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-secondary">Odustani</a>
    </div>
</form>

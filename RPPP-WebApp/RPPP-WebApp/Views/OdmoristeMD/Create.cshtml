        <div asp-validation-summary="All" class="form-group row"></div>

        <div class="form-group row">
            <label asp-for="NazivOdmorista" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-3">
                <input asp-for="NazivOdmorista" class="form-control" />
            </div>
            @*<label asp-for="DionicaId" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-1">
                <input asp-for="DionicaId" class="form-control" />
            </div>
            <label asp-for="Dionica" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-1">
                <input asp-for="Dionica" class="form-control" -/>
            </div>*@
             <label asp-for="Dionica" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-1">
                <input asp-for="DionicaId" readonly="readonly" class="form-control" data-autocomplete-placeholder="dionica" />
            </div>
            <div class="col-sm-3">
                <input class="form-control" data-autocomplete="dionica" asp-for="@Model.Dionica" />
            </div>
            @*<div class="mb-3">
                <label class="form-label">Dionica</label>
                <input class="form-control" data-autocomplete="dionica" asp-for="@Model.DionicaObj.Naziv" />
                <input asp-for="DionicaId" readonly="readonly" class="form-control" data-autocomplete-placeholder="dionica" />
            </div>*@
        </div>

        <div class="form-group row">
            <label asp-for="KoordinataX" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-1">
                <input asp-for="KoordinataX" class="form-control" />
            </div>
            <label asp-for="KoordinataY" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-1">
                <input asp-for="KoordinataY" class="form-control" />
            </div>
            <label asp-for="GodinaOtvaranja" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-1">
                <input asp-for="GodinaOtvaranja" class="form-control" />
            </div>
            <div class="col-sm-2">
                <button id="save" type="submit" class="btn btn-sm btn-primary save" title="Spremi"><i class="fas fa-save"></i></button>
                <a class="btn btn-sm btn-primary cancel" asp-action="Index" title="Odustani">
                    <i class="fas fa-undo-alt"></i>
                </a>
            </div>
        </div>
            
        <div class="col-sm-10">
            <partial name="PopratniSadrzaji" model="Model.PopratniSadrzaji" />
        </div>

@model OdmoristeViewModel
@{
    ViewBag.Title = "Izmjena Odmorista"; 
}

<div class="container">
    <div class="row text-center">
        <div class="col-sm-8">
            <h4>
                Odmoriste @Model.NazivOdmorista
            </h4>
        </div>
    </div>
</div>
<hr />


<div class="container">
    <form id="odmoriste_form" method="post" asp-action="Edit"
          asp-route-page="@ViewBag.Page"
          asp-route-sort="@ViewBag.Sort"
          asp-route-ascending="@ViewBag.Ascending"
          asp-route-filter="@ViewBag.Filter">
        <input type="hidden" asp-for="IdOdmorista" />
        <div asp-validation-summary="All" class="form-group row"></div>

        <div class="form-group row">

            <label asp-for="Dionica" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-1">
                <input asp-for="DionicaId" readonly="readonly" class="form-control" data-autocomplete-placeholder="dionica" />
            </div>
            <div class="col-sm-3">
                <input class="form-control" data-autocomplete="dionica" asp-for="@Model.Dionica" />
            </div>
            
            <label asp-for="GodinaOtvaranja" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-1">
                <input asp-for="GodinaOtvaranja" class="form-control" />
            </div>
            <div class="col-sm-2">
                <button id="save" type="submit" class="btn btn-sm btn-primary save" title="Spremi"><i class="fas fa-save"></i></button>
                <a class="btn btn-sm btn-primary cancel"
                   asp-action="Edit"
                   asp-route-id="@Model.IdOdmorista"
                   asp-route-page="@ViewBag.Page"
                   asp-route-sort="@ViewBag.Sort"
                   asp-route-ascending="@ViewBag.Ascending"
                   asp-route-filter="@ViewBag.Filter"
                   title="Osvježi">
                    <i class="fas fa-sync-alt"></i>
                </a>
                <a class="btn btn-sm btn-primary cancel"
                   asp-action="Index"
                   asp-route-page="@ViewBag.Page"
                   asp-route-sort="@ViewBag.Sort"
                   asp-route-ascending="@ViewBag.Ascending"
                   asp-route-filter="@ViewBag.Filter"
                   title="Odustani">
                    <i class="fas fa-undo-alt"></i>
                </a>
            </div>
        </div>

        <div class="container">
            <div class="form-group row">
                <label asp-for="KoordinataX" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-1">
                    <input asp-for="KoordinataX" class="form-control" />
                </div>
                <label asp-for="KoordinataY" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-1">
                    <input asp-for="KoordinataY" class="form-control datum" />
                </div>
            </div>
        </div>

        <div class="col-sm-10">
        <partial name="PopratniSadrzaji" model="Model.PopratniSadrzaji" />
        </div>
    </form>
 </div>

@*<partial name="NoviPopratniSadrzajTemplate" />*@

@section styles{
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
}

@section scripts{
    <partial name="IncludeValidation" />
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/js/autocomplete.js" asp-append-version="true"></script>
    <script src="~/js/dokumenti.js" asp-append-version="true"></script>
}

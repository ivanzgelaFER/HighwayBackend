@model NaplatnaPostaja

@{
    ViewBag.Title = "Ažuriranje naplatne postaje";
}

<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Naziv"></label>
        <div><span asp-validation-for="Naziv" class="text-danger"></span></div>
        <input asp-for="Naziv" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AutocestaId">Odaberite autocestu</label>
        <div><span asp-validation-for="AutocestaId" class="text-danger"></span></div>
        <select class="form-control" asp-for="AutocestaId" asp-items="ViewBag.NaplatnePostaje">
            <option disabled selected value="">Odaberite autocestu</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="KoordinataX">Odaberite x koordinatu</label>
        <div><span asp-validation-for="KoordinataX" class="text-danger"></span></div>
        <input asp-for="KoordinataX" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="KoordinataY">Odaberite y koordinatu</label>
        <div><span asp-validation-for="KoordinataY" class="text-danger"></span></div>
        <input asp-for="KoordinataY" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="GodinaOtvaranja">Godina otvaranja</label>
        <div><span asp-validation-for="GodinaOtvaranja" class="text-danger"></span></div>
        <input asp-for="GodinaOtvaranja" class="form-control" />
    </div>
    
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-default">Odustani</a>
    </div>
</form>

@section scripts {
    <partial name="IncludeValidation" />
}